<groupId>ru.geekbrains</groupId>
<artifactId>main-site-at</artifactId>
<version>1.0-SNAPSHOT</version>

<properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!--plugins versions-->
    <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    <java.version>1.8</java.version>
    <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    <exec-maven.version>1.6.0</exec-maven.version>
    <!--dependencies versions-->
    <selenium.version>4.0.0-alpha-5</selenium.version>
    <junit.version>5.6.1</junit.version>
    <junit-jupiter-api.version>5.6.1</junit-jupiter-api.version>
    <annotations-java5.version>19.0.0</annotations-java5.version>
    <hamcrest.version>2.2</hamcrest.version>
    <slf4j.version>1.7.30</slf4j.version>
    <webdrivermanager.version>3.8.1</webdrivermanager.version>
    <junit-platform-console-standalone.version>1.6.2</junit-platform-console-standalone.version>

</properties>

<build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>${maven-compiler-plugin.version}</version>
            <configuration>
                <encoding>UTF-8</encoding>
                <source>1.8</source>
                <target>1.8</target>
            </configuration>
        </plugin>

        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven-surefire-plugin.version}</version>
            <configuration>
<!--                <skipTests>false</skipTests>-->
                <!--true - Статус билда не зависит от прохождения тестов-->
                <testFailureIgnore>true</testFailureIgnore>
                <includes>
                    <include>**/*Test.java</include>
                    <include>**/Test*.java</include>
                    <include>**/When*.java</include>
                    <include>**/*WebTest*.java</include>
                </includes>
            </configuration>
        </plugin>

